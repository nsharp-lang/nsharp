{
	"$schema": "https://json-schema.org/draft/2019-09/schema",
	"properties": {
		"authors": {
			"description": "The authors of the package",
			"items": {
				"description": "An author of the package",
				"properties": {
					"email": {
						"description": "The email of the author",
						"format": "email",
						"type": "string"
					},
					"name": {
						"description": "The name of the author",
						"type": "string"
					}
				},
				"required": [
					"email"
				],
				"type": "object"
			},
			"type": "array"
		},
		"buildOptions": {
			"description": "The options for the build",
			"type": "object"
		},
		"buildTypes": {
			"description": "Overrides the configuration for build type",
			"properties": {
				"debug": {
					"description": "Overrides the configuration for debug",
					"type": "object"
				},
				"release": {
					"description": "Overrides the configuration for release",
					"type": "object"
				}
			},
			"type": "object"
		},
		"dependencies": {
			"description": "",
			"properties": {
				"build": {
					"description": "",
					"type": "object"
				},
				"development": {
					"description": "",
					"type": "object"
				},
				"runtime": {
					"description": "",
					"type": "object"
				},
				"system": {
					"description": "",
					"type": "object"
				}
			},
			"type": "object"
		},
		"licence": {
			"description": "",
			"properties": {
				"file": {
					"description": "",
					"type": "string"
				},
				"type": {
					"description": "",
					"type": "string"
				}
			},
			"type": "object"
		},
		"name": {
			"description": "The name of the package",
			"type": "string"
		},
		"readme": {
			"description": "The path to the README.md file",
			"type": "string"
		},
		"repository": {
			"description": "The Url to the source repository",
			"format": "uri",
			"type": "string"
		},
		"targets": {
			"description": "Overrides the configuration for target",
			"properties": {
				"x86_64-apple-darwin": {
					"description": "Overrides the configuration for the x86_64-apple-darwin target",
					"type": "object"
				},
				"x86_64-pc-windows-msvc": {
					"description": "Overrides the configuration for the x86_64-pc-windows-msvc target",
					"type": "object"
				},
				"x86_64-unknown-linux-gnu": {
					"description": "Overrides the configuration for the x86_64-unknown-linux-gnu target",
					"type": "object"
				}
			},
			"type": "object"
		},
		"type": {
			"description": "The type of the package",
			"enum": [
				"executable",
				"library"
			],
			"type": "string"
		},
		"version": {
			"description": "The version of the package",
			"type": "string"
		}
	},
	"required": [
		"name",
		"type",
		"version"
	],
	"title": "JSON schema for NSHARP nsharp.json files",
	"type": "object"
}
